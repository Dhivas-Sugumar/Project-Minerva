<h1>New course</h1>
<%= bootstrap_form_for(@course) do |f| %>
  <div class="form-inputs">
    <div class="field">
      <%= f.hidden_field :user_id, value: current_user.id %>
    </div>
    <div class="field">
      <%= f.hidden_field :draft, value: 1 %>
    </div>
    <div class="field">
      <%= f.select :category_id, options_from_collection_for_select(Category.all, "id", "category") %>
    </div>
    <div class="field">
      <%= f.text_area :title %>
    </div>
    <div class="field">
      <%= f.rich_text_area :description %>
    </div>


    <%#= f.input :members %>
    <%#= f.input :average %>
    <%#= f.input :rating %>
    <%#= f.input :course_id %>
    <div>
      <div id="sections">
        <%= f.fields_for :sections do |section| %>
          <%= render 'section_fields', f: section %>
        <% end %>

      </div>
    </div>
  </div>

  <div class="links">
    <%= link_to_add_association "Add Section", f, :sections, class: "btn btn-outline-primary" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit ,class: "btn btn-success" %>
  </div>
<% end %>
