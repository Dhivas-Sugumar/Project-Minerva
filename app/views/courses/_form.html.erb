<div class="d-flex justify-content-center flex-lg-row flex-md-row flex-column mt-2">
  <div class="pb-5 col-lg-12 col-lg-12">

    <%= bootstrap_form_for(@course) do |f| %>
      <div class="pt-2 shadow pb-4 mt-5 container mb-5">

        <div class="d-flex justify-content-between">
          <div class="lead text-start ">
            <%= f.check_box :draft, switch: true %>
          </div>
          <%= f.button :submit, class: "btn btn-outline-primary" %>
        </div>

        <div class="field">
          <%= f.hidden_field :user_id, value: current_user.id %>
        </div>

        <div class="field lead">
          <%= f.select :category_id, options_from_collection_for_select(@category.all, "id", "category") %>
        </div>

        <div class="field lead py-3">
          <label>Banner</label>
          <div>
            <%= f.file_field_without_bootstrap :banner, class: "form-control" %>
          </div>
        </div>

        <div class="field lead">
          <%= f.text_area :title %>
        </div>


        <div class="field lead">
          <label for="course_description">Description</label>

          <%= f.text_area_without_bootstrap :description , class: "tinymce"%>

        </div>
        <%= tinymce %>

        <div id="sections">
          <%= f.fields_for :sections do |section| %>
            <%= render 'section_fields', f: section %>
          <% end %>

        </div>


        <div class="links text-end">
          <%= link_to_add_association "Add Section", f, :sections, class: "btn btn-outline-primary " %>
        </div>

      </div>
    <% end %>
  </div>
</div>




