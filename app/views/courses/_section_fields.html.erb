

<div class="nested-fields ">
    <div><h2 class="display-6">Section</h2></div>
    <div class="text-end pt-3">
      <%= link_to_remove_association "Delete Section", f, class: "btn btn-outline-danger"  %>
    </div>


  <div class="field lead">
    <%= f.text_area :title %>
  </div>
  <div class="field lead">
    <label for="section_body">Body <p><small>(Must be more than 400 characters)</small></p></label>
    <%= f.text_area_without_bootstrap :body , class: "tinymce"%>
    <%= tinymce %>

  </div>


  <div>
    <div id="lessons">
      <%= f.fields_for :lessons do |lesson| %>
        <%= render 'lesson_fields', f: lesson %>
      <% end %>
      <div class="links text-end">
        <%= link_to_add_association 'Add Lesson', f, :lessons, class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>

</div>