
<div class="nested-fields">
  <div class="field">
    <%= f.text_area :title %>
  </div>
  <div class="field">
    <%= f.rich_text_area :body %>
  </div>

  <div>
    <h3>Lesson:</h3>
    <div id="lessons">
      <%= f.fields_for :lessons do |lesson| %>
        <%= render 'comment_fields', f: lesson %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'Add Lesson', f, :lessons, class: "btn btn-default" %>
      </div>
    </div>
  </div>
  <div class="links">
    <%= link_to_remove_association "Remove Section", f, class: "btn btn-default" %>
  </div>

</div>