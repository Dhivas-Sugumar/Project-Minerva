          <div class="tab-pane fade show account active ml-2" id="v-pills-account" role="tabpanel" aria-labelledby="v-pills-account-tab">
            <%= link_to "Edit Account", edit_user_registration_path(current_user), class: "text-decoration-none text-dark user-form w-100 d-block" %>
