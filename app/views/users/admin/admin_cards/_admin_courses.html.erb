<div class="card py-3">
  <div class="card-header">
    <div class="d-flex">
      <h5 class="float-start"><%= course.title %></h5>
      <p class="float-end lead"><%= "Count: #{course.enrolls_count}" %></p>
    </div>
    <div>
      <p class="lead"><%= "Category: #{course.category.category}" %></p>
    </div>
  </div>
  <div class="card-body">
    <div class="row">
      <div id="enrolled-users" class="admin-card-content col-md-5">
        <h6>Enrolled Users</h6>
        <% course.enrolls.each do |enroll| %>
          <div class="d-flex flex-row justify-content-between border-bottom border-top">
            <div class=" pr-3">
              <p><%= enroll.get_username %></p>
            </div>
            <div class="d-inline-flex">
              <%= link_to "View enroll", enroll_url(enroll), class: "btn btn-outline-primary" %>
              <%= button_to "Remove enroll", enroll, method: :delete, class: "btn btn-outline-danger" %>
            </div>
          </div>
        <%end%>
      </div>

      <div id="reviews" class="admin-card-content col-md-5">
        <h6>Course Reviews</h6>
        <div class="row d-flex">
          <% course.reviews.each do |review| %>
            <div class="d-flex flex-row justify-content-between border-bottom border-top">
              <div class="pr-3">
                <%= "Username: #{review.get_user.username}" %>
                <%= "Rating: #{review.rating} " %>
              </div>
              <div class="d-inline-flex">
                <%= button_to "Remove review", review, method: :delete, class: "btn btn-outline-danger" %>
                <%= link_to "View review", review_url(review), class: "btn btn-outline-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>