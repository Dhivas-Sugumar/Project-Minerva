<div class="card py-4">
  <div class="card-header">
    <h6><%=user.username %></h6>
  </div>
  <div class="card-body">
    <div class="row">
    <div id="courses" class="admin-card-content">
      <h6>Courses</h6>
      <% user.courses.each do |course| %>
        <div class="border-top border-bottom">
          <p><%= course.title %></p>
          <p><%= course.draft %></p>
        </div>
      <% end %>
    </div>

    <div id="enrolls" class="admin-card-content">
      <h6>Enrolls</h6>

      <% user.enrolls.each do |enroll| %>
        <div class="border-top border-bottom">
          <%= enroll.get_title %>
        </div>
      <% end %>
    </div>

    <div id="reviews" class="admin-card-content">
      <h6>Reviews</h6>

      <% user.reviews.each do |review| %>
        <div class="border-top border-bottom">
          <%=review.get_course.title %>
          <%=review.rating %>
        </div>
      <% end %>
    </div>
    </div>

  </div>

  <div class="card-footer">
    <%= link_to "Open user", users_path(user) , class: "btn btn-primary-outline"%>
    <%= button_to "Edit user", edit_user_path(user) , class: "btn btn-primary-outline"%>
    <%= button_to "Delete user", user, method: :delete , class: "btn btn-danger-outline"%>
  </div>
</div>