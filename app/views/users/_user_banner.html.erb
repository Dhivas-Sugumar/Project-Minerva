
<div class="p-1 text-center bg-light">
  <h1 class="mb-3">
    <% if current_user.avatar? %>
      <%= image_tag(current_user.avatar.url, :class => "rounded-circle mr-2 profile-pic-show", size: "150x150", alt: "Profile pic") %></h1>
    <%end %>
    <h4 class="mb-3"><strong><%= current_user.username %></strong></h4>
    <a><%= link_to "account","/account" , class: "button is-primary"%></a>
</div>