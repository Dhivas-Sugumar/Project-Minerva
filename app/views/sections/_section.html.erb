<div class="py-3 d-flex justify-content-end">
  <div class="pr-3">
    <%= link_to course_url(section.course_id) do %>
      <i class="fas fa-arrow-left mr-3">Back To Course</i>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center py-4">
  <h1 class="display-2"><%=section.title %></h1>
</div>


<div>
  <p><%= section.body %></p>
</div>
<div class="container">

  <% @lessons.each_with_index do |lesson, index| %>
    <div class="row">
      <div class="col-sm-6 mx-auto">
        <%= index + 1 %>. <%= link_to lesson.title, lesson_path(lesson) %>
      </div>
    </div>
  <% end %>


</div>
