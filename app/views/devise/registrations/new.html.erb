<% content_for(:title, 'Sign Up') %>
<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>

<%= render 'shared_views/header' %>

<div class="d-flex justify-content-center flex-lg-row flex-md-row flex-column mt-5">
  <div class="pb-5 col-lg-5 col-md-5">
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="pt-2 shadow pb-4 mt-5 container col-lg-7 col-md-12 mb-5">
        <div class="field">
          <%= f.text_field :username, autofocus: true, autocomplete: "username", required: true ,class: "bg-light" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autocomplete: "email", required: true ,class: "bg-light" %>
        </div>

        <div class="field">
          <%= f.text_field :first_name, autocomplete: "first_name", required: true ,class: "bg-light" %>
        </div>

        <div class="field">
          <%= f.text_field :last_name, autocomplete: "last_name",required: true , class: "bg-light" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password",required: true , class: "bg-light" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",required: true , class: "bg-light" %>
        </div>

        <div class="field">
          <div class="lead">
            <p>Avatar</p>
          </div>
          <div>
            <%= f.file_field_without_bootstrap :avatar %>
          </div>
        </div>

        <div class="actions d-flex justify-content-center mt-3">
          <%= f.submit "Sign up", class: "btn shadow btn-block bg-color text-blue" %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>