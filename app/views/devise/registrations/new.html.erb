<% content_for(:title, 'Sign Up') %>
<div class="d-flex justify-content-center flex-lg-row flex-md-row flex-column mt-5">
  <div class="pb-5 col-lg-5 col-md-5">
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="pt-2 shadow pb-4 mt-5 container col-lg-7 col-md-12 mb-5">
        <div class="field">
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "bg-light" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autocomplete: "email", class: "bg-light" %>
        </div>

        <div class="field">
          <%= f.text_field :first_name, autocomplete: "first_name", class: "bg-light" %>
        </div>

        <div class="field">
          <%= f.text_field :last_name, autocomplete: "last_name", class: "bg-light" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", class: "bg-light" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-light" %>
        </div>

        <div class="actions d-flex justify-content-center mt-3">
          <%= f.submit "Sign up", class: "btn shadow btn-block bg-color text-white" %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>