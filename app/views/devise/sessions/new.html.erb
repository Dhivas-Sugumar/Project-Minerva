<% content_for(:title, 'Sign In') %>
<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
<%= render 'shared_views/header' %>

<div class="d-flex justify-content-center flex-lg-row flex-md-row flex-column mt-5">
  <div class="pb-5 col-lg-5 col-md-5">
    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="pt-2 shadow pb-4 mt-5 container col-lg-7 col-md-12 mb-5">
        <div class="field">
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "bg-light" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", class: "bg-light" %>
        </div>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "small text-dark" %><br />
        <% end %>
        <% if devise_mapping.rememberable? %>
          <div class="field mt-3">
            <%= f.check_box :remember_me %>
          </div>
        <% end %>

        <div class="actions d-flex justify-content-center mt-3">
          <%= f.submit "Sign In", class: "btn shadow btn-block bg-color text-blue" %>
        </div>
        <p class="text-muted small text-center text-dark mt-2">By continuing, you agree to Project Minerva's
          <strong>Terms of Service, Privacy policy</strong>.</p>
        <div class="d-flex justify-content-center mt-4">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "small text-decoration-none text-center" %><br />
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>