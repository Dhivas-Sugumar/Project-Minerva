<div class="py-3 d-flex justify-content-end">
  <div class="pr-3">
    <%= link_to section_url(lesson.section_id) do %>
      <i class="fas fa-arrow-left mr-3">Back To Section</i>
    <% end %>
  </div>
</div>


<div class="d-flex justify-content-center py-4">
  <h1 class="display-2"><%=lesson.title %></h1>
</div>

<div class="row py-5">
  <div class="d-flex justify-content-center">
    <div class="col-xl-9 col-lg-8 justify-content-center">
      <div class="row">
        <p><%= lesson.body %></p>
      </div>
      <%= render partial: "lessons/lesson_video", locals: {videos: @videos} %>
    </div>
  </div>

</div>




