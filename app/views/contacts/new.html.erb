<%=render "shared_views/header" %>

<div class="container">
  <div class="row py-3">
    <div class="d-flex justify-content-center">
      <h1 class="display-4">Contact Form</h1>
    </div>
  </div>

  <div class="row py-3">
    <div class="d-flex justify-content-center">
      <%= bootstrap_form_for @contact do |f| %>
        <div class="row">
          <%= f.text_field  :name, required: true, class: "contact-form-text-area" %></br>
          <%= f.text_field :email, required: true, class: "contact-form-text-area" %></br>

          <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "contact-form-text-area",
                          placeholder: "Send me a message"%></br>
        </div>
        <div class="row py-3">
          <div class="col-xl-10">
            <%= f.submit 'Send Message', class: 'btn btn-outline-primary' %>
          </div>
        </div>
        </div>
      <% end %>
  </div>

</div>

<%=render "shared_views/footer" %>
